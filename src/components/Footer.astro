---
import { getLangFromUrl, useTranslations } from '../i18n/utils';    

const lang = getLangFromUrl(Astro.url) as "en" | "es";
const t = useTranslations(lang);
---

<footer class="bg-gray-800 text-white p-6">
  <div class="container mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div>
        <p>&copy; <span id="year" /> {t('site.title')} - {t('footer.rights')}</p>
      </div>
      <div class="flex space-x-4 mt-4 md:mt-0">
        <a href="#" class="hover:text-blue-300">{t('footer.terms')}</a>
        <a href="#" class="hover:text-blue-300">{t('footer.privacy')}</a>
      </div>
    </div>
  </div>
</footer>

<script>
  const year = new Date().getFullYear();
  const yearElement = document.getElementById('year');
  if (yearElement) {
    yearElement.textContent = year.toString();
  }
</script>