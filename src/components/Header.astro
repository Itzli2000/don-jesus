---
import LanguageSwitcher from "./LanguageSwitcher.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import DonJesusLogo from "./DonJesusLogo.astro";
const lang = getLangFromUrl(Astro.url) as "en" | "es";
const t = useTranslations(lang);
---

<header class="bg-white shadow-md py-4 sticky top-0 z-50">
  <div
    class="container mx-auto flex flex-col lg:flex-row justify-between items-center relative"
  >
    <a href={`/${lang}`} class="text-[#0077b6] w-full block">
      <DonJesusLogo />
    </a>

    <nav>
      <ul
        class="flex flex-row space-x-4 space-y-4 lg:space-y-0 lg:space-x-6 px-4 pt-6 pb-0 lg:p-0 items-center justify-center"
      >
        <li class="my-0 mx-2">
          <a href={`/${lang}`} class="block hover:text-blue-600"
            >{t("nav.home")}</a>
        </li>
        <li class="my-0 mx-2">
          <a
            href={`/${lang === "en" ? "en/events" : "es/eventos"}`}
            class="block hover:text-blue-600">{t("nav.events")}</a>
        </li>
        <li class="my-0 mx-2">
          <a
            href={`/${lang === "en" ? "en/contact" : "es/contacto"}`}
            class="block hover:text-blue-600">{t("nav.contact")}</a>
        </li>
        <li class="my-0 mx-2"><LanguageSwitcher /></li>
      </ul>
    </nav>

    <!-- Navigation menu -->
  </div>
</header>
