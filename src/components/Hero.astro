---
import { Picture } from "astro:assets";
import faro from "../assets/faro.jpeg";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url) as "en" | "es";
const t = useTranslations(lang);
---

<section
  class="relative min-h-[calc(100vh-100px)] flex items-center py-10 mx-[-20px] mt-[-30px]"
>
  <div class="absolute inset-0 top-0">
    <Picture
      src={faro}
      alt="Background"
      class="w-full h-full object-cover"
      height={1000}
    />
    <div class="absolute inset-0 bg-linear-to-b from-blue-900/0 to-blue-900/50"></div>
  </div>
  <div class="container mx-auto px-4 relative">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 drop-shadow-lg">
        {t("home.title")}
      </h1>
      <p class="text-xl text-white mb-8 drop-shadow-xl">{t("home.subtitle")}</p>
      <a
        href="/en/contact"
        class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
      >
        {t("home.cta")}
      </a>
    </div>
  </div>
</section>
