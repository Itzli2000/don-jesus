---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../i18n/utils";
import { Picture } from "astro:assets";
import AmenitiesSection from "../../components/AmenitiesSection.astro";
import ImageSlider from "../../components/ImageSlider.astro";
import faro from "../../assets/faro.jpeg";
import main from "../../assets/main.jpeg";

const lang = "en";
const t = useTranslations(lang);
---

<Layout title={t("site.title")} description={t("site.description")} lang={lang}>
  <section
    class="relative min-h-[calc(100vh-100px)] flex items-center py-10 mx-[-20px] mt-[-30px]"
  >
    <div class="absolute inset-0 top-0">
      <Picture
        src={faro}
        alt="Background"
        class="w-full h-full object-cover top-0"
        height={1000}
      />
      <div class="absolute inset-0 bg-blue-900/50"></div>
    </div>
    <div class="container mx-auto px-4 relative">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          {t("home.title")}
        </h1>
        <p class="text-xl text-white mb-8">{t("home.subtitle")}</p>
        <a
          href="/en/contact"
          class="inline-block px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
        >
          {t("home.cta")}
        </a>
      </div>
    </div>
  </section>

  <section class="py-16">
    <div
      class="container max-w-5xl text-center mx-auto px-4 flex flex-col items-center gap-4"
    >
    <h2 class="text-3xl font-bold text-gray-800 mb-6">
      {t("home.description")}
    </h2>
    <p class="text-gray-600 text-xl mb-6">
      {t("home.description2")}
    </p>
      <Picture
        src={main}
        alt="Background"
        class="w-full h-full object-cover top-0"
      />
    </div>
  </section>

  <AmenitiesSection />

  <ImageSlider />
</Layout>
